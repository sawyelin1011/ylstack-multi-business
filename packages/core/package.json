{
  "name": "@ylstack/core",
  "version": "1.0.0",
  "description": "YLStack Core - Configuration System and Platform Foundation",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./config": {
      "types": "./dist/lib/config/index.d.ts",
      "import": "./dist/lib/config/index.js",
      "require": "./dist/lib/config/index.js"
    },
    "./db": {
      "types": "./dist/lib/db/index.d.ts",
      "import": "./dist/lib/db/index.js",
      "require": "./dist/lib/db/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@hono/node-server": "^1.12.0",
    "@libsql/client": "^0.17.0",
    "better-sqlite3": "^12.6.2",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.6.0",
    "pg": "^8.17.2",
    "uuid": "^10.0.0",
    "yaml": "^2.8.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/uuid": "^10.0.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  }
}

# =============================================================================
# Environment Variables Example
# =============================================================================
# Copy this file to .env and fill in your values.
# Never commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Platform Identity (Optional)
# -----------------------------------------------------------------------------
# PLATFORM_NAME=YLStack
# PLATFORM_VERSION=1.0.0
# PLATFORM_DESCRIPTION=My Platform

# -----------------------------------------------------------------------------
# Runtime Configuration
# -----------------------------------------------------------------------------
# RUNTIME_ADAPTER=node
# RUNTIME_TARGET=vps

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# DATABASE_DRIVER=sqlite
# DATABASE_URL=file:./data/app.db
# DATABASE_POOL_SIZE=10
# DATABASE_CONNECTION_TIMEOUT=30000

# For PostgreSQL:
# DATABASE_DRIVER=postgresql
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# For Cloudflare D1:
# DATABASE_DRIVER=d1
# DATABASE_URL=file:./data/app.db

# For LibSQL:
# DATABASE_DRIVER=libsql
# DATABASE_URL=file:./data/app.db

# -----------------------------------------------------------------------------
# Feature Flags (Optional)
# -----------------------------------------------------------------------------
# PLUGINS_ENABLED=plugin-pages,plugin-forms
# PLUGINS_DISABLED=
# PAGES_ENABLED=true
# FORMS_ENABLED=true
# USERS_ENABLED=true

# -----------------------------------------------------------------------------
# Admin Configuration (Optional)
# -----------------------------------------------------------------------------
# ADMIN_THEME=default
# ADMIN_LOGO=/assets/logo.png
# ADMIN_FAVICON=/favicon.ico
# ADMIN_PRIMARY_COLOR=#3B82F6
# ADMIN_BRAND_NAME=My Admin Panel
# ADMIN_DEFAULT_ROLE=admin

# -----------------------------------------------------------------------------
# Authentication (REQUIRED in Production)
# =============================================================================
# Generate a secure JWT secret:
#   openssl rand -base64 32
# Or:
#   node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
# =============================================================================
JWT_SECRET=your-jwt-secret-at-least-32-characters-long

# Optional auth settings
# AUTH_PROVIDER=better-auth
# AUTH_SESSION_DURATION=86400
# AUTH_REFRESH_TOKEN_DURATION=604800
# AUTH_MAX_SESSION_AGE=2592000
# AUTH_PASSWORD_MIN_LENGTH=8
# AUTH_PASSWORD_REQUIRE_UPPERCASE=true
# AUTH_PASSWORD_REQUIRE_LOWERCASE=true
# AUTH_PASSWORD_REQUIRE_NUMBERS=true
# AUTH_PASSWORD_REQUIRE_SPECIAL_CHARS=false

# -----------------------------------------------------------------------------
# Storage Configuration
# -----------------------------------------------------------------------------
# STORAGE_PROVIDER=local
# STORAGE_PATH=./uploads
# STORAGE_BUCKET=your-bucket-name
# STORAGE_REGION=us-east-1
# STORAGE_MAX_FILE_SIZE=10485760

# For AWS S3:
# STORAGE_PROVIDER=s3
# STORAGE_BUCKET=my-bucket
# STORAGE_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# For Cloudflare R2:
# STORAGE_PROVIDER=r2
# STORAGE_BUCKET=my-r2-bucket
# STORAGE_REGION=auto
# R2_ACCESS_KEY_ID=your-access-key
# R2_SECRET_ACCESS_KEY=your-secret-key
# R2_ACCOUNT_ID=your-account-id

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
# LOG_LEVEL=info
# LOG_FORMAT=pretty
# LOG_FILE=./logs/app.log
# LOG_MAX_FILES=10
# LOG_MAX_SIZE=10m

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
# SERVER_PORT=3000
# SERVER_HOST=0.0.0.0

# CORS settings
# CORS_ENABLED=true
# CORS_ORIGIN=*
# CORS_CREDENTIALS=true

# Rate limiting
# RATE_LIMIT_ENABLED=true
# RATE_LIMIT_WINDOW_MS=60000
# RATE_LIMIT_MAX_REQUESTS=100

# -----------------------------------------------------------------------------
# Plugin Configuration (Optional)
# -----------------------------------------------------------------------------
# PLUGINS_ENABLED=plugin-pages,plugin-forms
# PLUGINS_DISABLED=

# -----------------------------------------------------------------------------
# Development Settings (Optional)
# -----------------------------------------------------------------------------
# NODE_ENV=development
# DEBUG=false
